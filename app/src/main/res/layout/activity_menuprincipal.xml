<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu">

    <Button
        android:id="@+id/btnMenuTiendas"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="112dp"
        android:backgroundTint="#6DBEFF"
        android:text="@string/title_btn_menu_tiendas"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMenuFav"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="252dp"
        android:backgroundTint="#F82819"
        android:text="@string/title_btn_menu_favoritos"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuTiendas" />
</androidx.constraintlayout.widget.ConstraintLayout>